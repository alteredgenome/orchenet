# OrcheNet Backend Configuration
# Copy this file to .env and update with your settings

# ===== Database Configuration =====
# SQLite (default for development)
DATABASE_URL=sqlite:///./orchenet.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/orchenet

# ===== Security =====
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Key header name
API_KEY_HEADER=X-API-Key

# ===== Server Configuration =====
HOST=0.0.0.0
PORT=8000
DEBUG=False
WORKERS=4

# ===== CORS Configuration =====
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# ===== SSH Configuration =====
SSH_TIMEOUT=30
SSH_MAX_CONNECTIONS=10
SSH_CONNECT_TIMEOUT=15

# ===== Task Processor =====
TASK_POLL_INTERVAL=10
TASK_MAX_RETRIES=3

# ===== Agent Configuration =====
AGENT_CHECK_IN_INTERVAL=60
AGENT_TIMEOUT=300

# ===== Redis Configuration (optional, for future use) =====
# REDIS_URL=redis://localhost:6379/0

# ===== Logging =====
LOG_LEVEL=INFO
LOG_FILE=logs/orchenet.log

# ===== UniFi Controller Defaults =====
# These can be overridden per device
UNIFI_SITE=default
UNIFI_VERIFY_SSL=False
